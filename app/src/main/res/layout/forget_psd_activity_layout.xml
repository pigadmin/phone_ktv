<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_fla_src"
    android:layout_height="wrap_content">

    <phone.ktv.views.CustomTopTitleView
        android:id="@+id/customTopTitleView1"
        custom:back_text_type="忘记密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <phone.ktv.views.CustomEditView
        android:id="@+id/customEditView1"
        android:layout_marginTop="50dp"
        custom:src_log_type1="@mipmap/shouji"
        custom:title_hint_type="请输入手机号"
        custom:input_digits="0123456789"
        custom:maxLength="11"
        custom:input_type="8194"
        custom:verd_code_isState="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <phone.ktv.views.CustomEditView
        android:id="@+id/customEditView2"
        android:layout_marginTop="10dp"
        custom:src_log_type1="@mipmap/yanzhengma"
        custom:title_hint_type="请输入验证码"
        custom:verd_code_isState="true"
        custom:input_digits="0123456789"
        custom:maxLength="6"
        custom:input_state="false"
        custom:input_type="8194"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <phone.ktv.views.CustomEditView
        android:id="@+id/customEditView3"
        android:layout_marginTop="10dp"
        custom:src_log_type1="@mipmap/mima"
        custom:title_hint_type="请输入您的新密码"
        custom:maxLength="20"
        custom:password_isState="true"
        custom:verd_code_isState="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!---->
    <phone.ktv.views.CustomEditView
        android:id="@+id/customEditView4"
        android:layout_marginTop="10dp"
        custom:maxLength="20"
        custom:src_log_type1="@mipmap/mima"
        custom:password_isState="true"
        custom:title_hint_type="请确认您的新密码"
        custom:verd_code_isState="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/register_tvw"
        android:layout_width="match_parent"
        android:text="确定"
        android:layout_marginLeft="30dp"
        android:background="@drawable/selector_btn"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
</LinearLayout>