<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_fla_src"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="10dp"
        android:src="@mipmap/touxiang"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="海豚音"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@mipmap/cpzx_k">

        <TextView
            android:layout_marginLeft="5dp"
            android:background="@mipmap/shouji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_edt"
            android:background="@mipmap/cpzx_k"
            android:hint="请输入手机号"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@mipmap/cpzx_k">

        <TextView
            android:layout_marginLeft="5dp"
            android:background="@mipmap/mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_edt"
            android:background="@mipmap/cpzx_k"
            android:hint="密码 (大于6位小于20位)"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/jizhu_ckb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="记住密码"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/wangji_tvw"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:text="忘记密码?"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_tvw"
            android:layout_width="match_parent"
            android:background="@mipmap/denglu_a"
            android:text="登录"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/register_tvw"
            android:layout_width="match_parent"
            android:background="@mipmap/denglu_a"
            android:text="注册"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>