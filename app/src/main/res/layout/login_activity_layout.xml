<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_fla_src"
    android:orientation="vertical">

    <phone.ktv.views.CustomTopTitleView
        android:id="@+id/customTopTitleView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:back_text_type="登录" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@mipmap/touxiang" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="海豚音"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <phone.ktv.views.CustomEditView
        android:id="@+id/customEditView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        custom:input_digits="0123456789"
        custom:input_type="8194"
        custom:maxLength="11"
        custom:src_log_type1="@mipmap/shouji"
        custom:title_hint_type="请输入手机号"
        custom:verd_code_isState="false" />

    <phone.ktv.views.CustomEditView
        android:id="@+id/customEditView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        custom:maxLength="20"
        custom:password_isState="true"
        custom:src_log_type1="@mipmap/mima"
        custom:title_hint_type="密码 (大于6位小于20位)"
        custom:verd_code_isState="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/jizhu_ckb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/jizhu_ckb"
            android:text="记住密码"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/wangji_tvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="忘记密码?"
            android:textColor="@drawable/selector_wanji_text_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_tvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/register_tvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>