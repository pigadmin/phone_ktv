<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <phone.ktv.bgabanner.BGABanner
        android:id="@+id/banner_main_accordion"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:banner_indicatorGravity="bottom|center_horizontal"
        app:banner_pageChangeDuration="5000"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointAutoPlayInterval="5000"
        app:banner_pointContainerLeftRightPadding="10dp"
        app:banner_pointLeftRightMargin="3dp"
        app:banner_pointTopBottomMargin="6dp"
        app:banner_tipTextColor="@android:color/white"
        app:banner_tipTextSize="15sp"
        app:banner_transitionEffect="accordion" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tabTitle2_cat"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/more1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="@string/more"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </RelativeLayout>

    <GridView
        android:id="@+id/grid_view_1"
        android:numColumns="3"
        android:verticalSpacing="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:horizontalSpacing="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>