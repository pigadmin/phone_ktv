<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#0A2B62"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/search_llt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@mipmap/searchbar_s"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/voice12_ivw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/selector_searchbar_yy" />

        <EditText
            android:id="@+id/search_content_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入歌名"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/found_description_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/delete_ivw_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/select_top_search_icon" />

        <TextView
            android:id="@+id/songType_tvw11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="歌名"
            android:textColor="@drawable/selector_btn_search14" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_search11_tvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:text="搜索"
        android:textColor="@drawable/selector_btn_search14"
        android:textSize="16sp" />
</LinearLayout>


