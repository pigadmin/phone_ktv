<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <phone.ktv.bgabanner.BGABanner
        android:id="@+id/banner_main_accordion"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:banner_indicatorGravity="bottom|center_horizontal"
        app:banner_pageChangeDuration="5000"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointAutoPlayInterval="5000"
        app:banner_pointContainerLeftRightPadding="10dp"
        app:banner_pointLeftRightMargin="3dp"
        app:banner_pointTopBottomMargin="6dp"
        app:banner_tipTextColor="@android:color/white"
        app:banner_tipTextSize="15sp"
        app:banner_transitionEffect="accordion" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tabTitle1_cat"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/more"
            android:textColor="@color/white" />

    </RelativeLayout>

    <GridView
        android:id="@+id/songgrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"></GridView>

</LinearLayout>